{
	"include": ["./src/**/*", "./tools/**/*"],
	"compilerOptions": {
		"outDir": "./dist/",
		"noImplicitAny": true,
		"module": "ES2022",
		"target": "ES2022",
		"moduleResolution": "node",
		"strict": true,
		"types": ["node", "blockbench-types", "svelte"],
		"resolveJsonModule": true,
		"allowSyntheticDefaultImports": true,
		"allowUmdGlobalAccess": true
	}
}
